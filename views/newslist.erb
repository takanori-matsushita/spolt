<% path = request.path %>
<%= erb :'parts/breadclumb' %>
  <!-- jumbotron -->
  <div style="background-image: url(/images/inquiry.jpg);" class="jumbotron card card-image bg-jumbotron">
    <div class="text-white text-center py-5 px-4 jumbotron-title">
      <div>
        <h1 class="card-title h1-responsive font-bold under-line"><strong><%= @title %></strong></h1>
        <p class="mx-5 mb-5"><%= @p %></p>
      </div>
    </div>
  </div>
</header>
<!-- main -->
<div class="main-wrapper py-5 grey lighten-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="tab-pane fade show active" id="news" role="tabpanel" aria-labelledby="news-tab">
          <dl class="row top-news">

          <% @new.each do |n| %>
            <dt class="col-md-3"><%= n.created_at %></dt>
            <dd class="col-md-9">
            <a class="black-text d-block" href="/news/<%= n.newscategory.slug %>/<%= n.id %>">
            <span style="width:85px;" class="text-center d-inline-block news <%= n.newscategory.slug %>"><%= n.newscategory.name %></span>
            <%= n.title %>
            </a>
            </dd>

          <% end %>
          </dl>
        </div>
        <!-- pagination -->
        <nav aria-label="Page navigation example">
          <ul class="pagination pagination-circle pg-blue justify-content-center my-5">
            <li class="page-item disabled"><a class="page-link">前へ</a></li>
            <li class="page-item disabled">
              <a class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <li class="page-item active"><a class="page-link">1</a></li>
            <li class="page-item"><a class="page-link">2</a></li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item"><a class="page-link">4</a></li>
            <li class="page-item"><a class="page-link">5</a></li>
            <li class="page-item">
              <a class="page-link" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
            <li class="page-item"><a class="page-link">次へ</a></li>
          </ul>
        </nav>
      </div>
      <%= erb :'parts/sidebar' %>
    </div>
  </div>
</div>