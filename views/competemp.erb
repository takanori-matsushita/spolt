
<%= erb :'parts/breadclumb' %>
<!-- main -->
<div class="main-wrapper py-5 grey lighten-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="row">

        <% @compe.each do |result| %>
          <div class="col-md-6 mb-4">
            <!-- Card -->
            <div class="card card-image" 
            <% if result.event.image.nil? %>
            style="background-image: url(/images/origin/no-img.png);">
            <% else %>
            style="background-image: url(/images/<%= result.event.image %>);">
            <% end %>
              <!-- Content -->
              <div class="text-white text-center d-flex align-items-center justify-content-center rgba-black-strong py-5 px-4">
                <div>
                  <h2 style="font-size:1.5rem;" class="card-title pt-2"><strong><%= result.title %></strong></h2>
                  <p><%= result.excerpt %></p>
                  <a class="btn btn-success" href="/compe-result/<%= result.id %>"><i class="fas fa-clone left"></i>詳細を見る</a>
                </div>
              </div>
            </div>
            <!-- Card -->
          </div>
        <% end %>
        </div>
        <!-- pagination -->
        <nav aria-label="Page navigation example">
          <ul class="pagination pagination-circle pg-blue justify-content-center my-5">
            <li class="page-item disabled"><a class="page-link">前へ</a></li>
            <li class="page-item disabled">
              <a class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <li class="page-item active"><a class="page-link">1</a></li>
            <li class="page-item"><a class="page-link">2</a></li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item"><a class="page-link">4</a></li>
            <li class="page-item"><a class="page-link">5</a></li>
            <li class="page-item">
              <a class="page-link" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
            <li class="page-item"><a class="page-link">次へ</a></li>
          </ul>
        </nav>
      </div>
<%= erb :'parts/sidebar' %>
    </div>
  </div>
</div>