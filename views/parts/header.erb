<% @setting = Setting.first %>
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="robots" content="" /> <!-- noindex,nofllow -->
  <title><%= @setting.title %></title>
  <meta name="description" content="<%= @setting.disc %>">
  <% if @setting.icon.nil? %>
  <% else %>
  <link rel="shortcut icon" href="/images/top/<%= @setting.icon %>" type="image/png">
  <% end %>
  <!-- OGP -->
  <!-- ※基本共通設定 -->
  <meta property="og:title" content="<%= @setting.title %>" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= request.url %>" />
  <meta property="og:image" content="<%= @setting.ogpimage %>" />
  <meta property="og:site_name" content="<%= @setting.title %>" />
  <meta property="og:description" content="<%= @setting.disc %>" />
  <!-- Facebook用設定 -->
  <meta property="fb:app_id" content="<%= @setting.fb_app_id %>" />
  <meta property="article:publisher" content="https://www.facebook.com/<%= @setting.fb_account %>">
  <!-- ※Twitter共通設定 -->
  <meta name="twitter:card" content="<%= @setting.tw_style %>" />
  <meta name="twitter:site" content="@<%= @setting.tw_account %>" />
  <!-- / OGP -->
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.10/css/mdb.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
  <link rel="stylesheet" href="/css/tocbot.css">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<% if session[:id] %>
<%= erb :'admin/login-header' %>
<% end %>
<header>
<nav class="navbar navbar-expand-lg navbar-dark blue-gradient justify-content-center">
  <a class="navbar-brand" href="/"><img class="header-logo img-fluid" src="/images/top/<%= @setting.logo %>" alt=""></a>
  <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarText">
    <span class="navbar-text white-text d-none d-lg-block">
      すぽるとでは、日本国内のあらゆるスポーツの情報を掲載しております。
    </span>
  </div>
</nav>
</header>